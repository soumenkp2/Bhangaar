<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragmentClass.profileFragment">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#53CD9F"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_weight="1.9"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile_bg"
                        android:layout_width="120dp"
                        android:layout_height="116dp"
                        android:src="@drawable/profile_pic_bg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/profile_pic_btn"
                        android:layout_width="119dp"
                        android:layout_height="116dp"
                        android:background="@drawable/profile_image_ref"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/profile_bg"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/edit_dp"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/editing"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.585"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.622" />

                    <ImageView
                        android:id="@+id/settings_button"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.919"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.1" />

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/back_btn_usr"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.079"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.1" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:background="@drawable/view_background"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:text="@string/amrit_raj"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.834" />

                    <ImageView
                        android:id="@+id/edit_usr_name"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/editing"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.624"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.8" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="15dp">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:background="@drawable/view_background"
                        android:gravity="start"
                        android:paddingStart="10dp"
                        android:paddingTop="16dp"
                        android:text="@string/location"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.6" />

                    <TextView
                        android:id="@+id/phone_no"
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:background="@drawable/view_background"
                        android:gravity="start"
                        android:paddingStart="10dp"
                        android:paddingTop="16dp"
                        android:text="@string/phone_number"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_semibold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.6" />

                    <ImageView
                        android:id="@+id/edit_location"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:src="@drawable/location_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.979"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.457" />

                    <ImageView
                        android:id="@+id/edit_phn_no"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pencil"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.419"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.457" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:background="@drawable/view_background"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:text="@string/offers"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                    <ImageView
                        android:id="@+id/offer_img"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="18dp"
                        android:layout_weight="3"
                        android:src="@drawable/gift"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:background="@drawable/view_background"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/transactions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:text="@string/transactions"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                    <ImageView
                        android:id="@+id/transactions_img"
                        android:layout_width="240dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="4"
                        android:src="@drawable/transaction_history"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:background="@drawable/view_background"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/orders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:text="@string/orders"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                    <ImageView
                        android:id="@+id/orders_img"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:layout_weight="4"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/order"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/view_background">

                    <TextView
                        android:id="@+id/social"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:text="@string/social"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/social_img"
                        android:layout_width="260dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="2"
                        android:src="@drawable/social"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>